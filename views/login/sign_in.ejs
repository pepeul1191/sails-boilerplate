<%- include('../partials/blank_header.ejs') %>
<form class="form-signin" action="<%= constants.base_url %>login/sign_in" method="post">
  <!--
  <a href="<%= constants.base_url %>">
    <img src="<%= constants.static_url %>assets/img/logo.png" height="130" width="240" class="mb-4 brand" alt="Logo-Login">
  </a>
  -->
  <h1 class="h3 mb-3 font-weight-normal"><%= contents.form_title_sign_in %></h1>
  <input type="hidden" name="<%= constants.csrf.key %>" value="<%= constants.csrf.secret %>">
  <span class="extraData"></span>
  <!--USER -->
  <label for="user" class="sr-only">user</label>
  <input type="text" id="user" class="form-control" placeholder="<%= contents.placeholder_user %>" required="" autofocus="" name="user">
  <!--EMAIL -->
  <label for="email" class="sr-only">email</label>
  <input type="email" id="email" class="form-control" placeholder="<%= contents.placeholder_email %>" required="" autofocus="" name="email">
  <!--PASS -->
  <label for="inputPassword" class="sr-only">password</label>
  <input type="password" id="inputPassword" class="form-control" placeholder="<%= contents.placeholder_password %>" required="" name="pass">
  <!--MESSAGE-->
  <p class="<%= message_status %> message" style="margin-top:10px;" id="login-message"><%= message %></p>
  <!--BUTTON -->
  <button class="btn btn-lg btn-primary btn-block" type="submit">
    <%= contents.button_sign_in %>
  </button>
  <!--FooTER LOGIN NAV -->
  <div class="link-login">
    <a class="" href="<%= constants.base_url %>login">
      <%= contents.login %>
    </a>
    <a id="forgotpassword" class=" pull-right" href="<%= constants.base_url %>login/reset_password">
      <%= contents.reset %>
    </a>
  </div>
  <p class="mt-3 mb-1 text-muted">Powered By <a href="http://softweb.pe/"> Softtware Web Perú</a> © 2017-2018</p>
</form>
<%- include('../partials/blank_footer.ejs') %>